<?xml version="1.0" encoding="UTF-8"?>
<!-- BURAI Build Script
     
     This is the main build script for the BURAI project.
     
     Purpose:
       - Compile Java source files from src/ to class/
       - Create executable JAR file (burai.jar) in bin/
     
     Usage:
       ant -f bin/build_compile.xml compile  # Compile source files only
       ant -f bin/build_compile.xml jar      # Create JAR (requires compilation first)
       ant -f bin/build_compile.xml build    # Compile and create JAR (recommended)
       ant -f bin/build_compile.xml clean    # Clean build directory
     
     Note: This file has been updated to use relative paths and work on any platform.
-->
<project name="burai-compile-test" default="compile" basedir="..">
    <!-- repo root contains src/, lib/, class/ -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="class"/>
    <property name="lib.dir" value="lib"/>

    <!-- Path to JavaFX libs. Adjust if you installed JavaFX in another location.
         If you installed via `sudo apt install openjfx`, use /usr/share/openjfx/lib -->
    <property name="path.to.fx" value="/usr/share/openjfx/lib"/>

    <!-- Source encoding for .java files. The source files use UTF-8 encoding.
         DO NOT change this to MS932 or other encodings as it will cause
         "unmappable character" errors for Greek letters (Γ, Σ, etc.) in the code. -->
    <property name="source.encoding" value="UTF-8"/>

    <path id="classpath">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
        </fileset>
        <!-- include JavaFX jars from the OpenJFX installation -->
        <fileset dir="${path.to.fx}" includes="*.jar" erroronmissingdir="false"/>
    </path>

    <target name="compile" description="Compile Java source files">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}"
               destdir="${build.dir}"
               encoding="${source.encoding}"
               includeantruntime="false"
               source="1.8"
               target="1.8"
               debug="on"
               failonerror="true">
            <classpath refid="classpath"/>
        </javac>
    </target>

    <target name="clean" description="Clean build directory">
        <delete dir="${build.dir}"/>
    </target>

    <target name="jar" depends="compile" description="Create executable JAR file">
        <jar destfile="bin/burai.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="burai.app.QEFXMain"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${build.dir}"/>
            <zipfileset excludes="META-INF/*.SF" src="${lib.dir}/exp4j-0.4.6.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${lib.dir}/gson-2.6.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${lib.dir}/jcodec-0.2.0.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${lib.dir}/jcodec-javase-0.2.0.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${lib.dir}/jsch-0.1.54.jar"/>
        </jar>
    </target>

    <target name="build" depends="compile,jar" description="Compile and create JAR"/>
</project>
